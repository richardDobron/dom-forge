{
    "name": "richarddobron/dom-forge",
    "description": "Lightweight PHP library for parsing and manipulating HTML documents.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "dobron\\DomForge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "dobron\\DomForge\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Richard Dobro≈à"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "ext-iconv": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0|^8.0",
        "friendsofphp/php-cs-fixer": "^3.2.1"
    },
    "scripts": {
        "post-merge": "composer install",
        "tests": "@php vendor/bin/phpunit --colors=always --testdox",
        "functional-tests": "@php vendor/bin/phpunit --colors=always --testsuite=functional",
        "fix-style": "@php vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "check-style": "@php vendor/bin/php-cs-fixer fix --allow-risky=yes --dry-run"
    },
    "scripts-descriptions": {
        "tests": "Run all tests."
    }
}
